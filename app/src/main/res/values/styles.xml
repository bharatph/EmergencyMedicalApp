<resources>

    <style name="AppTheme.HRM" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textview_size_large</item>
    </style>

    <style name="AppTheme.ListText">
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/textview_fading_edge_length</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/view_padding_small</item>
    </style>

    <style name="AppTheme.TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/textview_fading_edge_length</item>
    </style>

    <style name="AppTheme.CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="imageButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>
    </style>

</resources>
