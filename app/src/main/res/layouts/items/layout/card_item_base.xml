<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardItem"
    android:layout_marginLeft="@dimen/view_padding_medium"
    android:layout_marginStart="@dimen/view_padding_medium"
    android:layout_marginRight="@dimen/view_padding_medium"
    android:layout_marginEnd="@dimen/view_padding_medium"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius_medium"
    app:cardUseCompatPadding="true">
</android.support.v7.widget.CardView>