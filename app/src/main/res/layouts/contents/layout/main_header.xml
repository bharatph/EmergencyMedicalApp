<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/userDetailsConstraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/view_margin_small"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:duplicateParentState="true"
            android:id="@+id/headerUserImage"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:tooltipText="@string/user_content_description"
            android:src="@drawable/default_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin_small"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/headerUserImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:duplicateParentState="true"
                android:id="@+id/headerUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="@dimen/textview_fading_edge_length"
                android:text="@string/default_user_name" />

            <TextView
                android:duplicateParentState="true"
                android:id="@+id/headerUserHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_user_health" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
