<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:background="@android:color/transparent"
        android:id="@+id/userDetailsConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:duplicateParentState="true"
            android:id="@+id/headerUserImage"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:tooltipText="@string/user_content_description"
            android:src="@drawable/default_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin_small"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/headerUserImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:duplicateParentState="true"
                android:id="@+id/headerUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="@dimen/textview_fading_edge_length"
                android:text="@string/default_user_name" />

            <TextView
                android:duplicateParentState="true"
                android:id="@+id/headerUserHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_user_health" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDetailsConstraintLayout">

        <ImageButton
            android:tooltipText="@string/chat_button_description"
            android:id="@+id/headerHelplineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_helpline"/>

        <ImageButton
            android:tooltipText="@string/heart_button_description"
            android:id="@+id/headerHeartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_heart" />

        <ImageButton
            android:tooltipText="@string/alarm_button_description"
            android:id="@+id/headerAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_alarm" />

        <ImageButton
            android:tooltipText="@string/news_button_description"
            android:id="@+id/headerNewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_news" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>