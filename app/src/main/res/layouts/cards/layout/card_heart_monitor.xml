<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorSoftRed"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium" />
    <TextView
        android:text="@string/default_user_health"
        android:layout_gravity="center"
        android:transitionName="@string/transition_heart_hrm_name"
        android:id="@+id/cardHeartHRM"
        style="@style/AppTheme.HRM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>